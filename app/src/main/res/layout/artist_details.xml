<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/albumView"
    android:background="#ccc"
    android:elevation="@dimen/item_margin_small">
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin_medium"
        android:id="@+id/albumImageCard"
        android:layout_marginRight="@dimen/item_margin_large">
        <ImageView
            android:layout_width="@dimen/album_details_image_height"
            android:layout_height="wrap_content"
            android:id="@+id/artistImage"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/artistName"
        android:layout_toRightOf="@+id/albumImageCard"
        android:layout_marginTop="@dimen/item_margin_medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Small Text"
        android:id="@+id/artistGenres"
        android:layout_toRightOf="@+id/albumImageCard"
        android:layout_below="@+id/artistName"
        android:layout_marginTop="@dimen/item_margin_medium" />

</RelativeLayout>