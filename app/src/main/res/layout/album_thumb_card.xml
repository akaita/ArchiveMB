<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/item_margin_medium">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artistContainer">


        <ImageView
            android:layout_width="@dimen/album_thumb_width"
            android:layout_height="@dimen/album_thumb_height"
            android:id="@+id/albumImage"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/item_margin_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:id="@+id/albumName"
            android:autoText="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/albumImage"
            android:layout_toEndOf="@+id/imageView" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
