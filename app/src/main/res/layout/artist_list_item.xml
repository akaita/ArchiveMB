<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/item_margin_medium">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artistContainer">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:id="@+id/artistName"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:autoText="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="@dimen/item_margin_medium"
            android:layout_marginTop="@dimen/item_margin_medium"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignTop="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/artistGenres"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:autoText="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="@dimen/item_margin_medium"
            android:layout_marginRight="@dimen/item_margin_medium"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@+id/artistName"
            android:layout_marginBottom="@dimen/item_margin_medium" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
